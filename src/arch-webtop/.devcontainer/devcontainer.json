{
    "name": "${templateOption:projectName} Desktop (WebTop)",
    // Pre-built image from https://github.com/zyrakq/arch-devcontainer-images
    // See full list of available images at: https://github.com/zyrakq/arch-devcontainer-images#available-images
    // You can replace this with any image from arch-webtop families:
    // - arch-webtop-kasmvnc (terminal-only)
    // - arch-webtop-kde (KDE Plasma)
    // - arch-webtop-i3 (i3 window manager)
    // - arch-webtop-mate (MATE desktop)
    // - arch-webtop-xfce (XFCE desktop)
    "image": "ghcr.io/zyrakq/arch-devcontainer-images/arch-webtop-kde-common:latest",
    "workspaceFolder": "/workspace/${templateOption:projectName}",
    "workspaceMount": "source=${templateOption:projectName}-workspace,target=/workspace/${templateOption:projectName},type=volume",
    "mounts": [
        "source=${templateOption:projectName}-home,target=/config,type=volume"
    ],
    "remoteUser": "abc",
    "remoteEnv": {
        "HOME": "/config"
    },
    "containerEnv": {
        "PUID": "1000",
        "PGID": "1000",
        "TZ": "${templateOption:timezone}",
        "TITLE": "${templateOption:title}"
    },
    "overrideCommand": false,
    "runArgs": [
        "--name=${templateOption:projectName}-devcontainer",
        "--hostname=${templateOption:projectName}",
        "--network=${templateOption:projectName}-workspace-network",
        "--security-opt",
        "seccomp=unconfined",
        "--shm-size=1gb"
    ],
    "initializeCommand": [
        "bash",
        "-c",
        "docker network ls | grep -q ${templateOption:projectName}-workspace-network || docker network create ${templateOption:projectName}-workspace-network"
    ],
    "forwardPorts": [
        3000,
        3001
    ],
    "portsAttributes": {
        "3000": {
            "label": "Desktop Environment (HTTP)",
            "onAutoForward": "openBrowser"
        },
        "3001": {
            "label": "Desktop Environment (HTTPS)",
            "onAutoForward": "openBrowser"
        }
    }
}